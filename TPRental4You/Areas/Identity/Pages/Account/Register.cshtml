@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="kko" class="row" >
    <h1>Criar conta</h1>
    <div class="col-md-10">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crie uma nova conta.</h2>
            <hr />
            <div class="row">
                <div class="col-md-5 col-md-offset-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span><p style="margin:0"></p>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PrimeiroNome" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.PrimeiroNome"></label>
                <span asp-validation-for="Input.PrimeiroNome" class="text-danger"></span><p style="margin:0"></p>
            </div>
            <div class="form-floating">
                <input asp-for="Input.UltimoNome" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.UltimoNome"></label>
                <span asp-validation-for="Input.UltimoNome" class="text-danger"></span><p style="margin:0"></p>
            </div>
            
            <div class="form-floating">
                <input asp-for="Input.NIF" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.NIF"></label>
                <span asp-validation-for="Input.NIF" class="text-danger"></span><p style="margin:0"></p>
                    </div>
                </div>
                    <div class="col-md-7 col-md-offset-2">
            <div class="form-floating">
                <input asp-for="Input.DataNascimento" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.DataNascimento"></label>
                <span asp-validation-for="Input.DataNascimento" class="text-danger"></span><p style="margin:0"></p>
            </div>
            
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span><p style="margin:0"></p>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <p style="margin:0"></p>
            </div></div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color:cadetblue; border-color:cadetblue; border-radius:15px">Criar Conta</button>
            </div>
        </form>
    </div>
