@model TPRental4You.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Detalhes do utilizador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fotografia
        </dt>
        <dd class="col-sm-10">
            @if (Model.Avatar == null)
            {
                <img id="MyAvatar" class="img-thumbnail" style="height:75px;width:auto" src="~/imagens/user.png" />
            }
            else
            {
                <img id="MyAvatar" class="img-thumbnail" style="height:75px;width:auto"
                 src="data:image/*;base64,@(Convert.ToBase64String(Model.Avatar))" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrimeiroNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrimeiroNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UltimoNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UltimoNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NIF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NIF)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Administrador"))
    {
        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-UserId="@Model?.Id">Editar</a>
    }
    <a class="btn btn-outline-primary" asp-action="Index">Voltar atrás</a>
</div>
