@model TPRental4You.Models.ApplicationUser
@{
    ViewData["Title"] = "Editar Utilizador";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" class="form-control" />
            <input type="hidden" asp-for="Email" class="form-control" />
            <div class="form-floating">
                <div>
                    @if (Model.Avatar == null)
                    {
                        <img id="MyAvatar" class="img-thumbnail" style="width:200px; height:200px" src="~/imagens/user.png" />
                    }
                    else
                    {
                        <img id="MyAvatar" class="img-thumbnail" style="width:200px; height:200px"
                         src="data:image/*;base64,@(Convert.ToBase64String(Model.Avatar))" />
                    }
                </div>
                <div>
                    <label asp-for="AvatarFile">Escolha uma imagem de perfil:</label>
                    <input type="file" accept=".png,.jpg,.jpeg,image/png,image/jpeg"
                           asp-for="AvatarFile" class="form-control"
                           onchange="document.getElementById('MyAvatar').src = window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="AvatarFile" class="text-danger"></span>
                </div>
            </div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" disabled readonly />
                <label asp-for="Email" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="PrimeiroNome" class="form-control" />
                <label asp-for="PrimeiroNome" class="form-label"></label>
                <span asp-validation-for="PrimeiroNome" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="UltimoNome" class="form-control" />
                <label asp-for="UltimoNome" class="form-label"></label>
                <span asp-validation-for="UltimoNome" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="NIF" class="form-control" />
                <label asp-for="NIF" class="form-label"></label>
                <span asp-validation-for="NIF" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="DataNascimento" class="form-control" />
                <label asp-for="DataNascimento" class="form-label"></label>
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

<a class="btn btn-outline-primary" asp-action="Index">Voltar atrás</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

