@model TPRental4You.Models.Empresa

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover</h1>

@if (ViewBag.ApagaEmpresa)
{
    <h3>Tem a certeza que pretende eliminar a empresa?</h3>
}
else
{
    <h3 class="text-warning">Não pode eliminar esta empresa!</h3>
}

<div>
    <h4>Empresa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        @if (ViewBag.ApagaEmpresa)
        {
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        <a class="btn btn-primary" asp-action="Index">Voltar</a>
    </form>

</div>
