    </div>

    <section id="tab-parceiros" id="banner" class="container-fluid" style="background-color: white; margin-bottom: 100px; margin-top: 0px;">
        <div class="row">
            <div class="waviy reveal fade-bottom " style="text-align: center; margin-bottom: 50px; margin-top:50px">
                <span style="--i:1">P</span>
                <span style="--i:2">a</span>
                <span style="--i:3">r</span>
                <span style="--i:4">c</span>
                <span style="--i:5">e</span>
                <span style="--i:6">i</span>
                <span style="--i:7">r</span>
                <span style="--i:8">o</span>
                <span style="--i:9">s</span>
            </div>
            <div class="col-md-4 reveal fade-bottom" style="text-align: center">
                <img style="width: 150px; height: 100px; border-radius:24px; box-shadow: 10px 10px 20px grey" src="imagens/centauro-logo.jpg"></img>
            </div>
            <div class="col-md-4 reveal fade-bottom" style="text-align: center">
                <img style="width: 150px; height: 100px; border-radius:24px; box-shadow: 10px 10px 20px grey" src="imagens/europcar.jpg"></img>
            </div>
            <div class="col-md-4 reveal fade-bottom" style="text-align: center">
                <img style="width: 150px; height: 100px; border-radius:24px; box-shadow: 10px 10px 20px grey" src="imagens/hertz.jpg"></img>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>
        function reveal() {
            var reveals = document.querySelectorAll(".reveal");

            for (var i = 0; i < reveals.length; i++) {
                var windowHeight = window.innerHeight;
                var elementTop = reveals[i].getBoundingClientRect().top;
                var elementVisible = 150;

                if (elementTop < windowHeight - elementVisible) {
                    reveals[i].classList.add("active");
                } else {
                    //reveals[i].classList.remove("active");
                }
            }
        }

        window.addEventListener("scroll", reveal);


        $(".li1").on("click", function () {
            $(".mudaTab").attr('class', 'mudaTab');
            $(".mudaTab").addClass("eff1");
        });
        $(".li2").on("click", function () {
            $(".mudaTab").attr('class', 'mudaTab');
            $(".mudaTab").addClass("eff2");
        });
        $(".li3").on("click", function () {
            $(".mudaTab").attr('class', 'mudaTab');
            $(".mudaTab").addClass("eff3");
        });

        $(window).scroll(function () {
            var hT = $('#tab-quem-somos').offset().top,
                hH = $('#tab-quem-somos').outerHeight(),
                wH = $(window).height(),
                wS = $(this).scrollTop();
            if (wS > (hT + hH - wH) && (hT > wS) && (wS + wH > hT + hH)) {
               
                    $(".mudaTab").attr('class', 'mudaTab');
                    $(".mudaTab").addClass("eff3");
               
            } 
        });

        $(window).scroll(function () {
            var hT = $('#tab-parceiros').offset().top,
                hH = $('#tab-parceiros').outerHeight(),
                wH = $(window).height(),
                wS = $(this).scrollTop();
            if (wS > (hT + hH - wH) && (hT > wS) && (wS + wH > hT + hH)) {
                $(".mudaTab").attr('class', 'mudaTab');
                $(".mudaTab").addClass("eff2");
               
            } 
        });

         $(window).scroll(function () {
            var hT = $('#tab-inicio').offset().top,
                hH = $('#tab-inicio').outerHeight(),
                wH = $(window).height(),
                wS = $(this).scrollTop();
            if (wS > (hT + hH - wH) && (hT > wS) && (wS + wH > hT + hH)) {
                $(".mudaTab").attr('class', 'mudaTab');
                $(".mudaTab").addClass("eff1");
               
            } 
        });

    </script>

    <hr style="border: 10px solid cadetblue; border-radius: 5px;"></hr>

    <section id="tab-quem-somos" id="banner" class="container-fluid" style="background-color: white; margin-bottom: 0px;  margin-top: 0px;">
        <div class="row">
            <div class="waviy reveal fade-bottom " style="text-align: center; margin-bottom: 50px; margin-top: 50px">
                <span style="--i:1">Q</span>
                <span style="--i:2">u</span>
                <span style="--i:3">e</span>
                <span style="--i:4">m</span>
                <span style="--i:5"> </span>
                <span style="--i:6">S</span>
                <span style="--i:7">o</span>
                <span style="--i:8">m</span>
                <span style="--i:9">o</span>
                <span style="--i:10">s</span>
            </div>
            <div id="eu" class="col-md-6 reveal fade-left" style="text-align: center">
                <img style="width: 400px; height: 355px; border-radius:24px; box-shadow: 10px 10px 20px grey" src="imagens/eduardo.jpg"></img>
            </div>
            <div class="col-md-6 reveal fade-right" style="text-align: center">
