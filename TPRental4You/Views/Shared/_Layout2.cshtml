                        </button>
                        @*<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">*@
                        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                            @*<ul class="navbar-nav flex-grow-1">*@
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item li1">
                                    <a class="nav-link text-white et-hero-tab" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>

                                <li class="nav-item li2">
                                    <a href="#tab-parceiros" class="nav-link text-white et-hero-tab">Parceiros</a>
