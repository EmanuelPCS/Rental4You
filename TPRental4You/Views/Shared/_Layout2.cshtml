                            </ul>
                            <partial name="_LoginPartial" />
                            <div class="mudaTab"></div>
                        </div>
                    </div>
                </nav>
            </div>
        </header>


        <main class="container-fluid" id="banner-containerTeste" style="background-image: url('imagens/meuautomovelmaresia1.png'); background-repeat: no-repeat; background-size: cover;">
            @RenderBody()
