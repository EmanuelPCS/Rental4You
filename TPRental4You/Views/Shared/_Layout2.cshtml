    <section id="footer">
        <section id="banner">
            <div class="container-fluid" id="banner-container" style="padding-bottom: 10px; padding-top: 0px;">
                <div class="row" id="banner-row">
                    <div class="col-md-12" id="footer-col1">

                        <h3>Rental4You</h3>

                        <p>
                            &copy; 2022 - Rental4You - Todos os direitos reservados.
                        </p>

                        <p id="ola"><a asp-area="" asp-controller="Home" asp-action="Privacy" class="btn btn-primary">Política de Privacidade</a></p>

                    </div>

                </div>
            </div>
        </section>
    </section>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
