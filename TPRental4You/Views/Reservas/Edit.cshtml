@model TPRental4You.Models.Reserva

@{
    ViewData["Title"] = "Edit";
}

@if (Enum.GetName(typeof(estadoReserva), Model.EstadoReserva).Equals("Confirmada") && Enum.GetName(typeof(situacaoReserva), Model.Situacao).Equals("Por_Pagar"))
{
    <h1>Confirme os dados da reserva</h1>
}
else if (Enum.GetName(typeof(estadoReserva), Model.EstadoReserva).Equals("Rejeitada") && Enum.GetName(typeof(situacaoReserva), Model.Situacao).Equals("Por_Pagar"))
{
    <h1>Confirme os dados da reserva</h1>
    <h4>Tem a certeza que deseja rejeitar a reserva?</h4>
}
else
{
    <h1>Edit</h1>
    <h4>Reserva</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Preco" class="form-control" />
            <select style="display:none" asp-for="VeiculoId" asp-items="ViewBag.VeiculoId"></select>
            <select style="display:none" asp-for="ClienteId" asp-items="ViewBag.ClienteId"></select>
            <select style="display:none" asp-for="EmpresaId" asp-items="ViewBag.EmpresaId"></select>
            <select asp-for="EstadoReserva" style="display:none" class="form-control" asp-items="Html.GetEnumSelectList<estadoReserva>()"></select>
            <input type="hidden" asp-for="DataDeEntrega" />
            <input type="hidden" asp-for="Situacao" />
            <input type="hidden" asp-for="DataDeLevantamento" />
            <input type="hidden" asp-for="DataDeReserva" />

            <div class="form-group">
                <label asp-for="EstadoReserva" class="control-label"></label>
                <select asp-for="EstadoReserva" class="form-control" disabled asp-items="Html.GetEnumSelectList<estadoReserva>()"></select>
                <span asp-validation-for="EstadoReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeLevantamento" class="control-label"></label>
                <input asp-for="DataDeLevantamento" disabled readonly class="form-control" />
                <span asp-validation-for="DataDeLevantamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeEntrega" class="control-label"></label>
                <input asp-for="DataDeEntrega" disabled readonly class="form-control" />
                <span asp-validation-for="DataDeEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class="form-control" disabled readonly asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeiculoId" class="control-label"></label>
                <select asp-for="VeiculoId" class="form-control" disabled readonly asp-items="ViewBag.VeiculoId"></select>
                <span asp-validation-for="VeiculoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpresaId" class="control-label"></label>
                <select asp-for="EmpresaId" class="form-control" disabled readonly asp-items="ViewBag.EmpresaId"></select>
                <span asp-validation-for="EmpresaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" disabled readonly class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submeter" class="btn btn-primary" style="background-color:cadetblue; border-color:cadetblue; border-radius:15px" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
