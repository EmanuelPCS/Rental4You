@model TPRental4You.Models.Reserva

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Detalhes da Reserva</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoReserva)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EstadoReserva)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Situacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Situacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeLevantamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeLevantamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDeEntrega)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDeEntrega)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.veiculo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.veiculo.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.empresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.empresa.Nome)
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
                Danos
        </dt>
        @if(ViewBag.Ficheiros == null) {
            <dd class="col-sm-10">
                    Sem danos
            </dd>
        } else {

        <div class="row d-flex">
                @foreach (var file in ViewBag.Ficheiros)
                {
                <div class="col p-2 m-2" style="border-radius:10px;">
                    <img src="@file"
                     class="img-thumbnail"
                     style="max-width:150px; max-height:150px" />
                </div>
                }
        </div>
        }
    </dl>
</div>
<div>
    <a class="btn btn-outline-primary" asp-action="Index">Voltar às reservas</a>
</div>
