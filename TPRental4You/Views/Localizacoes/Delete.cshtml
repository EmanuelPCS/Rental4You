@model TPRental4You.Models.Localizacao

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover</h1>

<h3>Tem a certeza que pretende remover a localização?</h3>
<div>
    <h4>Localizacao</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InfoAdicional)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InfoAdicional)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-outline-danger" />
        <a class="btn btn-outline-primary" asp-action="Index">Voltar</a>
    </form>
</div>
