@model TPRental4You.Models.Veiculo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Veiculo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            <img id="MyFoto" class="img-thumbnail" style="height:75px;width:auto"
                 src="data:image/*;base64,@(Convert.ToBase64String(Model.Foto))" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Matricula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Km)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Km)
        </dd>
        <dt class="col-sm-2">
            Preço por hora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lugares)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lugares)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Malas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Malas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mudancas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mudancas)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicial)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataInicial)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataFim)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.localizacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.localizacao.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tiposDeVeiculo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tiposDeVeiculo.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.empresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.empresa.Id)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Funcionario") || User.IsInRole("Gestor"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning">Editar</a>
        <a asp-action="Index" class="btn btn-outline-info">Voltar à lista</a>
    } else {
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-info">Voltar</a>
    }
</div>
